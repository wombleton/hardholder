  body(data-offset="50")
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href='/') hardholder.com
          ul.nav
            li(class=category === 'moves' ? 'active' : '')
              a(href="/moves") Moves
            li(class=category === 'play' ? 'active' : '')
              a(href="/play") Play
          .pull-right
            form#search.navbar-search
              input.search-query(type="text", placeholder="Tag search")
            .btn-group.login
              - if (everyauth.loggedIn)
                a.btn.btn-inverse(href='/logout', title='Logout')
                  i.icon-signout
              - else
                a.btn.btn-success(href='/login', title='Login')
                  i.icon-signin
    .container
      !=body
    footer
      .container
        .row
          .span12
            .btn-group
              a.btn(href='http://twitter.com/wombleton') @wombleton
              a.btn(href='http://apocalypse-world.com')
                i.icon-external-link
                |  Apocalypse World
              a.btn(href='/moves/rss')
                i.icon-bookmark
                |  RSS
