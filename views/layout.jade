  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    title Hardholder
    != css('screen')
    != js('hardholder')
    link(rel='SHORTCUT ICON', href='/images/hardholder.png')

    script(type='text/javascript')
      var _gaq = _gaq || [];
